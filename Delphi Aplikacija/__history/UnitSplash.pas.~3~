unit UnitSplash;

interface

uses
  System.SysUtils, System.Types, System.UITypes, System.Classes, System.Variants,
  FMX.Types, FMX.Controls, FMX.Forms, FMX.Graphics, FMX.Dialogs,
  FMX.StdCtrls, FMX.Objects, UnitSignIn, FMX.Controls.Presentation;

type
  TfrmSplash = class(TForm)
    recBackground: TRectangle;
    lblDobrodosli: TLabel;
    btnDalje: TButton;
    procedure btnDaljeClick(Sender: TObject);
    procedure FormCreate(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmSplash: TfrmSplash;

implementation

{$R *.fmx}

procedure TfrmSplash.FormCreate(Sender: TObject);
begin

  lblDobrodosli.Position.X := (Self.Width - lblDobrodosli.Width) / 2;
end;

procedure TfrmSplash.btnDaljeClick(Sender: TObject);
begin
  frmSignIn.Show;
  Self.Hide;
end;

end.
