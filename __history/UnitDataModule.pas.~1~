unit UnitDataModule;

interface

uses
  System.SysUtils, System.Classes, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB,
  FireDAC.Comp.DataSet, FireDAC.Comp.Client, FireDAC.Stan.Def,
  FireDAC.Stan.Pool, FireDAC.Phys, FireDAC.Phys.SQLite, FireDAC.Phys.SQLiteDef,
  FireDAC.Stan.ExprFuncs, FireDAC.Phys.SQLiteWrapper.Stat, System.IOUtils,
  FMX.Dialogs, FireDAC.UI.Intf, FireDAC.FMXUI.Wait, FireDAC.Phys.MySQLDef,
  FireDAC.Phys.MySQL;

type
  TForm5 = class(TDataModule)
    FDConnection: TFDConnection;
    SQLiteDriver: TFDPhysMySQLDriverLink;
    qryUsers: TFDQuery;
    qryProducts: TFDQuery;
    qryOrders: TFDQuery;
    procedure DataModuleCreate(Sender: TObject);
  private
    function IsDatabaseCreated: Boolean;
  public
    CurrentUserID: Integer;
    CurrentUserRole: string;
    procedure ShowError(const Msg: string);
  end;

var
  dmPKV: TForm5;

implementation

{%CLASSGROUP 'FMX.Controls.TControl'}

{$R *.dfm}

procedure TForm5.ShowError(const Msg: string);
begin
  ShowMessage('Greška u bazi: ' + Msg);
end;

function TForm5.IsDatabaseCreated: Boolean;
begin
  Result := FileExists(FDConnection.Params.Values['Database']);
end;

procedure TForm5.DataModuleCreate(Sender: TObject);
var
  DBPath: string;
begin
  DBPath := TPath.Combine(TPath.GetDocumentsPath, 'PKV.db');
  FDConnection.Params.Clear;
  FDConnection.Params.Values['DriverID'] := 'SQLite';
  FDConnection.Params.Values['Database'] := DBPath;
  FDConnection.Params.Values['LockingMode'] := 'Normal';
  FDConnection.Params.Values['JournalMode'] := 'Delete';  // bolje za mobilno

  try
    FDConnection.Connected := True;
    if not IsDatabaseCreated then
      ShowMessage('Nova baza kreirana: ' + DBPath);

    // Kreiranje tabela sa IF NOT EXISTS
    FDConnection.ExecSQL(
      'CREATE TABLE IF NOT EXISTS Users (' +
      'ID INTEGER PRIMARY KEY AUTOINCREMENT, ' +
      'Username TEXT UNIQUE NOT NULL, ' +
      'Password TEXT NOT NULL, ' +
      'Role TEXT DEFAULT "Kupac")');

    FDConnection.ExecSQL(
      'CREATE TABLE IF NOT EXISTS Products (' +
      'ID INTEGER PRIMARY KEY AUTOINCREMENT, ' +
      'Naziv TEXT NOT NULL, ' +
      'Vrsta TEXT, ' +           // npr. "Torta", "Kolač", "Slatkiš", "Makaron"
      'Cena REAL NOT NULL, ' +
      'Opis TEXT, ' +
      'SlikaPath TEXT)');        // putanja do slike proizvoda

    FDConnection.ExecSQL(
      'CREATE TABLE IF NOT EXISTS Orders (' +
      'ID INTEGER PRIMARY KEY AUTOINCREMENT, ' +
      'UserID INTEGER NOT NULL, ' +
      'Datum DATE NOT NULL, ' +
      'Status TEXT DEFAULT "Nova", ' +  // Nova, U pripremi, Spremna, Preuzeta, Otkazana
      'UkupnaCena REAL NOT NULL, ' +
      'Napomena TEXT)');

    // Opcionalno: dodaj indeks za brže pretrage
    FDConnection.ExecSQL('CREATE INDEX IF NOT EXISTS idx_userid ON Orders(UserID)');
    FDConnection.ExecSQL('CREATE INDEX IF NOT EXISTS idx_datum ON Orders(Datum)');

  except
    on E: Exception do
      ShowError(E.Message + sLineBreak + 'Proveri da li je SQLite driver instaliran.');
  end;
end;

end.
